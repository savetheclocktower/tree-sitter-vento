{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "vento",
  "rules": {
    "template": {
      "type": "REPEAT",
      "content": {
        "type": "CHOICE",
        "members": [
          {
            "type": "SYMBOL",
            "name": "content"
          },
          {
            "type": "SYMBOL",
            "name": "tag"
          }
        ]
      }
    },
    "content": {
      "type": "PREC_RIGHT",
      "value": 0,
      "content": {
        "type": "REPEAT1",
        "content": {
          "type": "PATTERN",
          "value": "[^\\{]+|\\{"
        }
      }
    },
    "tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "{{"
            },
            {
              "type": "STRING",
              "value": "{{-"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "_expression"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "filter"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "STRING",
              "value": "}}"
            },
            {
              "type": "STRING",
              "value": "-}}"
            }
          ]
        }
      ]
    },
    "_expression": {
      "type": "CHOICE",
      "members": [
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "code_snippet"
          },
          "named": true,
          "value": "code"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "keyword"
          },
          "named": true,
          "value": "code"
        },
        {
          "type": "ALIAS",
          "content": {
            "type": "SYMBOL",
            "name": "close_keyword"
          },
          "named": true,
          "value": "keyword"
        },
        {
          "type": "SEQ",
          "members": [
            {
              "type": "SYMBOL",
              "name": "keyword"
            },
            {
              "type": "ALIAS",
              "content": {
                "type": "SYMBOL",
                "name": "_code"
              },
              "named": true,
              "value": "code"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "comment"
        }
      ]
    },
    "filter": {
      "type": "REPEAT1",
      "content": {
        "type": "SEQ",
        "members": [
          {
            "type": "STRING",
            "value": "|>"
          },
          {
            "type": "ALIAS",
            "content": {
              "type": "SYMBOL",
              "name": "_code"
            },
            "named": true,
            "value": "code"
          }
        ]
      }
    },
    "keyword": {
      "type": "PATTERN",
      "value": "[a-z>][a-zA-Z]*? |if|for|include|set|import|export|layout|function"
    },
    "code_snippet": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "[a-zA-Z>\\.\\(\\)\\!_\\?]"
        },
        {
          "type": "SYMBOL",
          "name": "_code"
        }
      ]
    },
    "close_keyword": {
      "type": "PATTERN",
      "value": "\\/([a-zA-Z]+|if|for|include|set|import|export|layout|function)"
    },
    "comment": {
      "type": "PATTERN",
      "value": "#[^#]+#"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [
    {
      "type": "SYMBOL",
      "name": "_code"
    }
  ],
  "inline": [],
  "supertypes": []
}
